{namespace zz.home.templates.view}

/**
 * View dataset template.
 * @param uid
 */
{template .dataset}
    <div
        class="{css zz-home-view}"
        data-set="{$uid}">
    </div>
{/template}

/**
 * View datarow template.
 * @param uid
 */
{template .datarow}
    <div
        class="{css item}"
        data-row="{$uid}">
    </div>
{/template}

/**
 * View model template.
 * @param key
 * @param value
 */
{template .model}
