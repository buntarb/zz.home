/**
 * Default item template.
 * @param key
 * @param value
 */
{template .simpleList}
    <div>
        <div
            class="
                {css icon}
                {sp}
                {if $value.icon.length}
                    {$value.icon}
                {/if}">
        </div>
        <div
            class="{css caption}"
            data-model="{$key.caption}">
            {$value.caption}
        </div>
    </div>
{/template}

/**
 * Slogan item template.
 * @param key
 * @param value
 */
{template .slogan}
    <div
        class="{css slogan-bg}">
        <div
            class="
                {css icon}
                {sp}
                {if $value.icon.length}
                    {$value.icon}
                {/if}">
        </div>
        <div
            class="{css golden-block} {css height-small}">
            <div
                class="{css golden-block} {css width-small}">
                <span
                    class="{css caption}"
                    data-model="{$key.caption}">
                    {$value.caption}
                </span>
            </div>
        </div>
        <div
            class="{css golden-block} {css height-big}">
            <div
                class="{css golden-block} {css width-small}">
            </div>
            <div
                class="{css golden-block} {css width-big}">
                <span
                    class="message">
                    {msg meaning="slogan" desc="slogan"}
                        Эволюция в разработке JavaScript приложений
                    {/msg}
                </span>
            </div>
        </div>
    </div>
{/template}