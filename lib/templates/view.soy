        id="id{$value.id}"
        class="{css about-idk} {css model} {css demo-card-wide} {css mdl-card}"
        data-class="{$key.active}:{css active},{$key.disable}:{css disable}">
        {switch $value.id}
            {case 'slogan'}
                {call zz.home.templates.view.slogan data="all" /}
            {default}
                {call zz.home.templates.view.simpleList data="all" /}
        {/switch}
        
        
